@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div>
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Team_Name" class="form-control" aria-required="true" placeholder="Example" />
                <label asp-for="Input.Team_Name">Team Name</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Example" />
                <label asp-for="Input.Name">Name</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Holidays" class="form-control" aria-required="true" placeholder="25" />
                <label asp-for="Input.Holidays">Allocated Holiday</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Service_Days" class="form-control" aria-required="true" placeholder="4" />
                <label asp-for="Input.Service_Days">Allocated Service Days</label>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Input.Shift_Pattern" class="form-control" aria-required="true" asp-items="Html.GetEnumSelectList<Pattern>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <label asp-for="Input.Shift_Pattern">Shift Pattern</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.isManager" type="checkbox" value="true">
                <label asp-for="Input.isManager">Manager</label>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
